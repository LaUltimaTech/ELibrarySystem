    }

    .modal-content {
        width: 95%;
        margin: 30% auto;
    }

    }
</style>

<div class="teacher-list-container">
    <!-- Alert Messages -->
    <div id="alertBox" class="alert"></div>

    <!-- CSRF Token -->
    @Html.AntiForgeryToken()

    <!-- Header Section -->
    <div class="list-header">
        <h1>Teacher List</h1>
        <select class="school-dropdown" id="schoolDropdown" onchange="filterBySchool()">
            <option value="0">-- Select School --</option>
            @foreach (var school in Model.Schools)
            {
                if (Model.SelectedSchoolId == school.SchoolId)
                {
                    <option value="@school.SchoolId" selected>
                        @school.SchoolName (@school.SchoolCode)
                    </option>
                }
                else
                {
                    <option value="@school.SchoolId">
                        @school.SchoolName (@school.SchoolCode)
                    </option>
                }
            }
        </select>
    </div>

    <!-- Teacher Details Section -->
    <div class="teacher-details-section">
        <h3 class="teacher-details-title">Teacher Details</h3>

        <!-- Controls -->
        <div class="controls-section">
            <button class="btn-control" onclick="exportToExcel()">📊 Excel</button>
            <button class="btn-control" onclick="exportToPdf()">📄 PDF</button>

            <div class="column-visibility" style="position: relative;">
                <button class="btn-control" id="columnBtn">⚙️ Column visibility ▼</button>
                <div class="column-menu" id="columnMenu">
                    <label><input type="checkbox" value="TeacherName" checked onchange="updateColumnVisibility()"> Teacher Name</label>
                    <label><input type="checkbox" value="Username" checked onchange="updateColumnVisibility()"> Username</label>
                    <label><input type="checkbox" value="School" checked onchange="updateColumnVisibility()"> School</label>
                    <label><input type="checkbox" value="Email" checked onchange="updateColumnVisibility()"> Email</label>
                    <label><input type="checkbox" value="TeacherMobileNo" checked onchange="updateColumnVisibility()"> Mobile</label>
                    <label><input type="checkbox" value="DOB" onchange="updateColumnVisibility()"> DOB</label>
                    <label><input type="checkbox" value="City" onchange="updateColumnVisibility()"> City</label>
                    <label><input type="checkbox" value="Actions" checked onchange="updateColumnVisibility()"> Actions</label>
                </div>
            </div>

            <div class="search-box">
                <span class="search-label">🔍 Search:</span>
                <input type="text" id="searchInput" placeholder="Search by name, email...">
            </div>
        </div>

        <!-- Table -->
        @if (Model.Teachers.Any())
        {
            <div class="table-container">
                <table id="teacherTable">
                    <thead>
                        <tr>
                            <th class="col-SrNo">Sr No.</th>
                            <th class="col-TeacherName">Teacher Name</th>
                            <th class="col-Username">Username</th>
                            <th class="col-School">School</th>
                            <th class="col-Email">Email</th>
                            <th class="col-TeacherMobileNo">Mobile</th>
                            <th class="col-DOB">DOB</th>
                            <th class="col-City">City</th>
                            <th class="col-Actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model.Teachers)
                        {
                            <tr>
                                <td class="col-SrNo">@teacher.SrNo</td>
                                <td class="col-TeacherName">@teacher.TeacherName</td>
                                <td class="col-Username">@teacher.Username</td>
                                <td class="col-School">@teacher.School</td>
                                <td class="col-Email">@teacher.Email</td>
                                <td class="col-TeacherMobileNo">@teacher.TeacherMobileNo</td>
                                <td class="col-DOB">@teacher.DOB</td>
                                <td class="col-City">@teacher.City</td>
                                <td class="col-Actions">
                                    <div class="action-buttons">
                                        <button class="action-btn btn-edit" onclick="openEditModal(@teacher.TeacherId)" title="Edit">
                                            ✎
                                        </button>
                                        <button class="action-btn btn-delete" onclick="openDeleteModal(@teacher.TeacherId, '@teacher.TeacherName')" title="Delete">
                                            🗑️
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                @{
                    int totalPages = (int)ViewBag.TotalPages;
                    int currentPage = (int)ViewBag.CurrentPage;
                    int schoolId = Model.SelectedSchoolId;
                }

                @if (currentPage > 1)
                {
                    <a href="@Url.Action("Index", "TeacherList", new { pageNumber = 1, schoolId = schoolId })">« First</a>
                    <a href="@Url.Action("Index", "TeacherList", new { pageNumber = currentPage - 1, schoolId = schoolId })">‹ Previous</a>
                }
                else
                {
                    <span class="disabled">« First</span>
                    <span class="disabled">‹ Previous</span>
                }

                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    @if (i == currentPage)
                    {
                        <span class="active">@i</span>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "TeacherList", new { pageNumber = i, schoolId = schoolId })">@i</a>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <a href="@Url.Action("Index", "TeacherList", new { pageNumber = currentPage + 1, schoolId = schoolId })">Next ›</a>
                    <a href="@Url.Action("Index", "TeacherList", new { pageNumber = totalPages, schoolId = schoolId })">Last »</a>
                }
                else
                {
                    <span class="disabled">Next ›</span>
                    <span class="disabled">Last »</span>
                }
            </div>

            <div class="info-text">
                Showing @((currentPage - 1) * (int)ViewBag.PageSize + 1) to @Math.Min(currentPage * (int)ViewBag.PageSize, (int)ViewBag.TotalCount)
                of <strong>@ViewBag.TotalCount</strong> entries
            </div>
        }
        else
        {
            <div class="no-records">
                <p>No teachers found.</p>
            </div>
        }
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Edit Teacher</h2>
            <button class="close-btn" onclick="closeEditModal()">&times;</button>
        </div>
        <form id="editForm">
            <div class="modal-body">
                <input type="hidden" id="teacherId">

                <div class="form-group">
                    <label>Teacher Name</label>
                    <input type="text" id="teacherName" required>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="email">
                </div>

                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" id="dob">
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <input type="text" id="address">
                </div>

                <div class="form-group">
                    <label>City</label>
                    <input type="text" id="city">
                </div>

                <div class="form-group">
                    <label>District</label>
                    <input type="text" id="district">
                </div>

                <div class="form-group">
                    <label>State</label>
                    <input type="text" id="state">
                </div>

                <div class="form-group">
                    <label>Mobile No.</label>
                    <input type="tel" id="teacherMobileNo">
                </div>

                <div class="form-group">
                    <label>WhatsApp No.</label>
                    <input type="tel" id="teacherWhatsappNo">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
                <button type="submit" class="btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal delete-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Delete Teacher</h2>
            <button class="close-btn" onclick="closeDeleteModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p class="delete-warning">⚠️ Warning!</p>
            <p>Are you sure you want to delete <strong id="deleteTeacherName"></strong>?</p>
            <p style="color: #666; font-size: 13px;">This action will also delete the associated user account and cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button class="btn-delete-confirm" onclick="confirmDelete()">Yes, Delete</button>
        </div>
    </div>
</div>

<script>
    let editingTeacherId = null;
    let deletingTeacherId = null;

    // Toggle column visibility menu
    document.getElementById('columnBtn').addEventListener('click', function () {
        document.getElementById('columnMenu').classList.toggle('show');
    });

    // Close menu when clicking outside
    document.addEventListener('click', function (event) {
        const columnDiv = document.querySelector('.column-visibility');
        if (!columnDiv.contains(event.target)) {
            document.getElementById('columnMenu').classList.remove('show');
        }
    });

    function showAlert(message, type) {
        const alertBox = document.getElementById('alertBox');
        alertBox.textContent = message;
        alertBox.className = 'alert show alert-' + type;
        setTimeout(() => {
            alertBox.classList.remove('show');
        }, 4000);
    }

    function filterBySchool() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("Index", "TeacherList")' + '?schoolId=' + schoolId + '&pageNumber=1';
    }

    function updateColumnVisibility() {
        const checkboxes = document.querySelectorAll('.column-menu input');
        const visibleColumns = Array.from(checkboxes)
            .filter(cb => cb.checked)
            .map(cb => cb.value)
            .join(',');

        checkboxes.forEach(cb => {
            const columnClass = 'col-' + cb.value;
            const cells = document.querySelectorAll('.' + columnClass);
            cells.forEach(cell => {
                cell.style.display = cb.checked ? '' : 'none';
            });
        });

        fetch('@Url.Action("UpdateColumnVisibility", "TeacherList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: JSON.stringify({ columns: visibleColumns })
        });
    }

    function exportToExcel() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("ExportToExcel", "TeacherList")' + '?schoolId=' + (schoolId || '');
    }

    function exportToPdf() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("ExportToPdf", "TeacherList")' + '?schoolId=' + (schoolId || '');
    }

    function openEditModal(teacherId) {
        editingTeacherId = teacherId;
        fetch(`@Url.Action("GetTeacherDetails", "TeacherList")?id=${teacherId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('teacherId').value = data.teacherId;
                document.getElementById('teacherName').value = data.teacherName || '';
                document.getElementById('email').value = data.email || '';
                document.getElementById('dob').value = data.dob || '';
                document.getElementById('address').value = data.address || '';
                document.getElementById('city').value = data.city || '';
                document.getElementById('district').value = data.district || '';
                document.getElementById('state').value = data.state || '';
                document.getElementById('teacherMobileNo').value = data.teacherMobileNo || '';
                document.getElementById('teacherWhatsappNo').value = data.teacherWhatsappNo || '';
                document.getElementById('editModal').classList.add('show');
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('Error loading teacher data', 'error');
            });
    }

    function closeEditModal() {
        document.getElementById('editModal').classList.remove('show');
        editingTeacherId = null;
    }

    document.getElementById('editForm').addEventListener('submit', function (e) {
        e.preventDefault();

        const teacherId = document.getElementById('teacherId').value;
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        const updateData = {
            teacherId: parseInt(teacherId),
            teacherName: document.getElementById('teacherName').value,
            emailId: document.getElementById('email').value,
            dateOfBirth: document.getElementById('dob').value ? new Date(document.getElementById('dob').value).toISOString().split('T')[0] : null,
            teacherAddress: document.getElementById('address').value,
            teacherCity: document.getElementById('city').value,
            teacherDistrict: document.getElementById('district').value,
            teacherState: document.getElementById('state').value,
            teacherMobileNo: document.getElementById('teacherMobileNo').value ? parseInt(document.getElementById('teacherMobileNo').value) : null,
            teacherWhatsappNo: document.getElementById('teacherWhatsappNo').value ? parseInt(document.getElementById('teacherWhatsappNo').value) : null
        };

        fetch('@Url.Action("UpdateTeacher", "TeacherList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify(updateData)
        })
        .then(response => response.json())
        .then(data => {
            closeEditModal();
            if (data.success) {
                showAlert(data.message, 'success');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                showAlert(data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Error updating teacher', 'error');
        });
    });

    function openDeleteModal(teacherId, teacherName) {
        deletingTeacherId = teacherId;
        document.getElementById('deleteTeacherName').textContent = teacherName;
        document.getElementById('deleteModal').classList.add('show');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.remove('show');
        deletingTeacherId = null;
    }

    function confirmDelete() {
        if (!deletingTeacherId) return;

        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        fetch('@Url.Action("DeleteTeacher", "TeacherList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify({ id: deletingTeacherId })
        })
        .then(response => response.json())
        .then(data => {
            closeDeleteModal();
            if (data.success) {
                showAlert(data.message, 'success');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                showAlert(data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Error deleting teacher', 'error');
        });
    }

    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function () {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#teacherTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Close modals when clicking outside
    window.addEventListener('click', function (event) {
        const editModal = document.getElementById('editModal');
        const deleteModal = document.getElementById('deleteModal');

        if (event.target === editModal) {
            closeEditModal();
        }
        if (event.target === deleteModal) {
            closeDeleteModal();
        }
    });
</script>