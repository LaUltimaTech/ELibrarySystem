@model ELibrarySystem.ViewModels.TeacherListViewModel

@{
    ViewData["Title"] = "Teacher List";
}

<style>
    .teacher-list-container {
        padding: 20px;
        background-color: #f5f5f5;
    }

    .list-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

        .list-header h1 {
            color: #7cb342;
            font-size: 2.5em;
            margin: 0;
            font-weight: bold;
        }

    .school-dropdown {
        width: 400px;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    .controls-section {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
        align-items: center;
    }

    .btn-control {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        background-color: #5a5a5a;
        color: white;
        cursor: pointer;
        font-weight: bold;
        font-size: 14px;
        transition: all 0.3s;
    }

        .btn-control:hover {
            background-color: #4a4a4a;
            transform: translateY(-2px);
        }

    .search-box {
        margin-left: auto;
        display: flex;
        gap: 10px;
        align-items: center;
    }

        .search-box input {
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 300px;
        }

    .search-label {
        color: #7cb342;
        font-weight: bold;
    }

    .teacher-details-section {
        background-color: white;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
        border-left: 4px solid #7cb342;
    }

    .teacher-details-title {
        color: #1976d2;
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .table-container {
        overflow-x: auto;
        background-color: white;
        border-radius: 4px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #f9f9f9;
        border-bottom: 2px solid #ddd;
    }

    th {
        padding: 15px;
        text-align: left;
        font-weight: bold;
        color: #333;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    td {
        padding: 12px 15px;
        border: 1px solid #ddd;
        font-size: 14px;
        color: #333;
    }

    tbody tr:hover {
        background-color: #f9f9f9;
    }

    tbody tr:nth-child(even) {
        background-color: #fafafa;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
        font-size: 16px;
    }

    .btn-edit {
        background-color: #2196F3;
        color: white;
    }

        .btn-edit:hover {
            background-color: #1976D2;
            box-shadow: 0 4px 8px rgba(33, 150, 243, 0.3);
        }

    .btn-delete {
        background-color: #f44336;
        color: white;
    }

        .btn-delete:hover {
            background-color: #da190b;
            box-shadow: 0 4px 8px rgba(244, 67, 54, 0.3);
        }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 5px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

        .pagination a,
        .pagination span {
            padding: 10px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-decoration: none;
            color: #1976d2;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s;
        }

            .pagination a:hover {
                background-color: #1976d2;
                color: white;
            }

        .pagination .active {
            background-color: #1976d2;
            color: white;
            border-color: #1976d2;
        }

        .pagination .disabled {
            color: #ccc;
            cursor: not-allowed;
        }

    .info-text {
        margin-top: 15px;
        color: #666;
        font-size: 14px;
    }

    .no-records {
        text-align: center;
        padding: 40px;
        color: #999;
        font-size: 16px;
    }

    .column-visibility {
        position: relative;
    }

    .column-menu {
        position: absolute;
        top: 100%;
        left: 0;
        background: white;
        border: 1px solid #ddd;
        border-radius: 4px;
        z-index: 100;
        min-width: 200px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        display: none;
        margin-top: 5px;
    }

        .column-menu.show {
            display: block;
        }

        .column-menu label {
            display: block;
            padding: 10px 15px;
            cursor: pointer;
            user-select: none;
        }

            .column-menu label:hover {
                background-color: #f0f0f0;
            }

        .column-menu input {
            margin-right: 10px;
        }

    /* Modal Styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        animation: fadeIn 0.3s;
    }

        .modal.show {
            display: block;
        }

     fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .modal-content {
        background-color: white;
        margin: 10% auto;
        padding: 0;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        width: 90%;
        max-width: 600px;
        animation: slideDown 0.3s;
    }

     slideDown {
        from

    {
        transform: translateY(-50px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .modal-header {
        background-color: #2196F3;
        color: white;
        padding: 20px;
        border-radius: 8px 8px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h2 {
            margin: 0;
            font-size: 1.5em;
        }

    .close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 28px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .close-btn:hover {
            transform: scale(1.2);
        }

    .modal-body {
        padding: 30px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            box-sizing: border-box;
        }

            .form-group input:focus {
                outline: none;
                border-color: #2196F3;
                box-shadow: 0 0 5px rgba(33, 150, 243, 0.3);
            }

    .modal-footer {
        padding: 20px;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        border-top: 1px solid #eee;
    }

    .btn-save {
        background-color: #4caf50;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-save:hover {
            background-color: #45a049;
            box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
        }

    .btn-cancel {
        background-color: #757575;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-cancel:hover {
            background-color: #616161;
        }

    /* Delete Confirmation Modal */
    .delete-modal .modal-header {
        background-color: #f44336;
    }

    .delete-modal .modal-body {
        text-align: center;
        padding: 40px 30px;
    }

        .delete-modal .modal-body p {
            font-size: 16px;
            margin: 10px 0;
            color: #333;
        }

    .delete-warning {
        color: #f44336;
        font-weight: bold;
        font-size: 18px;
    }

    .delete-modal .modal-footer {
        justify-content: center;
        gap: 15px;
    }

    .btn-delete-confirm {
        background-color: #f44336;
        color: white;
        padding: 10px 30px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-delete-confirm:hover {
            background-color: #da190b;
            box-shadow: 0 4px 8px rgba(244, 67, 54, 0.3);
        }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        display: none;
    }

        .alert.show {
            display: block;
        }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    (max-width: 768px) {
        .list-header

    {
        flex-direction: column;
        gap: 15px;
    }

    .school-dropdown {
        width: 100%;
    }

    .search-box {
        margin-left: 0;
        width: 100%;
    }

        .search-box input {
            width: 100%;
        }

    table {
