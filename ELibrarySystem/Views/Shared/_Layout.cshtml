@{
   
    var title = ViewData["Title"] ?? "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@title - Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f4f6f9;
            overflow-x: hidden;
        }

        /* NAVBAR */
        .navbar-dark {
            background-color: #212529;
            height: 56px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
            padding: 0 20px;
        }

        /* SIDEBAR */
        #sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            height: calc(100% - 56px);
            width: 240px;
            background: linear-gradient(180deg, #343a40, #212529);
            color: white;
            overflow-y: auto;
            transition: 0.3s;
            box-shadow: 2px 0 8px rgba(0,0,0,0.25);
            z-index: 999;
        }

            #sidebar.collapsed {
                width: 70px;
            }

            #sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                #sidebar ul li {
                    padding: 12px 20px;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    cursor: pointer;
                    font-size: 15px;
                    transition: 0.3s;
                    border-left: 4px solid transparent;
                }

                    #sidebar ul li:hover {
                        background-color: #495057;
                        border-left: 4px solid #0d6efd;
                    }

                    #sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        display: flex;
                        align-items: center;
                        gap: 10px;
                        width: 100%;
                    }

        .menu-text {
            white-space: nowrap;
        }

        #sidebar.collapsed .menu-text {
            display: none;
        }

        /* SUBMENU */
        .submenu {
            list-style: none;
            padding-left: 45px;
            display: none;
            background: #2b3035;
        }

            .submenu li a {
                color: #dee2e6;
                padding: 7px 0;
                font-size: 14px;
            }

        .dropdown-arrow {
            margin-left: auto;
            transition: 0.3s;
        }

        .rotate {
            transform: rotate(90deg);
        }

        /* MAIN CONTENT */
        #content {
            margin-left: 240px;
            padding: 20px;
            margin-top: 56px;
            transition: 0.3s;
        }

        #sidebar.collapsed + #content {
            margin-left: 70px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-dark fixed-top d-flex justify-content-between align-items-center">

        <button class="btn btn-outline-light" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>

        <span class="navbar-brand">Admin Dashboard</span>

        <!-- PROFILE DROPDOWN ADDED HERE -->
        <div class="dropdown">
            <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
               href="#" id="profileDropdown" data-bs-toggle="dropdown">

                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                     style="width:36px;height:36px;border-radius:50%;border:2px solid white;margin-right:8px;">
                <strong>Admin</strong>
            </a>

            <ul class="dropdown-menu dropdown-menu-end text-small">
                <li>
                    <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </li>

                <li><hr class="dropdown-divider"></li>

                <li>
                    <a class="dropdown-item text-danger" href="/UserMaster/Login">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
        <!-- END PROFILE -->
    </nav>

    <div id="sidebar">
        <ul class="mt-3">

            <!-- DASHBOARD -->
            <li>
                <a asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-house-door"></i><span class="menu-text">Dashboard</span>
                </a>
            </li>

            <!-- SCHOOL DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-building"></i> <span class="menu-text">School</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="School" asp-action="Create">Add School</a></li>
                <li><a asp-controller="School" asp-action="Index">School List</a></li>
            </ul>

            <!-- STANDARD DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-layers"></i> <span class="menu-text">Standard</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Standard" asp-action="Create">Add Standard</a></li>
                <li><a asp-controller="Standard" asp-action="Index">Standard List</a></li>
            </ul>

            <!-- DIVISION DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-people"></i> <span class="menu-text">Division</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Division" asp-action="Create">Add Division</a></li>
                <li><a asp-controller="Division" asp-action="Index">Division List</a></li>
            </ul>

            <!-- BOOK DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-book"></i> <span class="menu-text">Book</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Book" asp-action="Create">Add Book</a></li>
                <li><a asp-controller="Book" asp-action="Index">Book List</a></li>
            </ul>

            <!-- BOOK CATEGORY DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-collection"></i> <span class="menu-text">Book Category</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="BookCategory" asp-action="Create">Add Category</a></li>
                <li><a asp-controller="BookCategory" asp-action="Index">Category List</a></li>
            </ul>

            <!-- STUDENT DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-person"></i> <span class="menu-text">Student</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Student" asp-action="Index">Add Student</a></li>
                <li><a asp-controller="StudentList" asp-action="Index">Student List</a></li>
            </ul>

            <!-- TEACHER DROPDOWN -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-person-badge"></i> <span class="menu-text">Teacher</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Teacher" asp-action="Index">Add Teacher</a></li>
                <li><a asp-controller="TeacherList" asp-action="Index">Teacher List</a></li>
            </ul>

            <!-- REPORTS (Already working) -->
            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-bar-chart-line"></i><span class="menu-text">Reports</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>
            <ul class="submenu">
                <li><a asp-controller="Reports" asp-action="StudentDetails">Student Details Report</a></li>
                <li><a asp-controller="Reports" asp-action="TeacherDetails">Teacher Details Report</a></li>
                <li><a asp-controller="Reports" asp-action="BookReadStudents">Student Book Read</a></li>
                <li><a asp-controller="Reports" asp-action="BookReadTeachers">Teacher Book Read</a></li>
            </ul>

            <!-- LOGOUT -->
            <li>
                <a asp-controller="UserMaster" asp-action="Login">
                    <i class="bi bi-box-arrow-right"></i><span class="menu-text">Logout</span>
                </a>
            </li>
        </ul>
    </div>




    <!-- MAIN CONTENT -->
    <div id="content">
        @RenderBody()
    </div>

    <!-- CHANGE PASSWORD MODAL -->
    <div class="modal fade" id="changePasswordModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title">Change Password</h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <form>

                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input type="password" class="form-control">
                        </div>


                    </form>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary">Update Password</button>
                </div>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
        }

        function toggleSubmenu(menuItem) {
            let submenu = menuItem.nextElementSibling;
            let arrow = menuItem.querySelector(".dropdown-arrow");

            submenu.style.display = (submenu.style.display === "block") ? "none" : "block";
            arrow.classList.toggle("rotate");
        }
    </script>

</body>
</html>