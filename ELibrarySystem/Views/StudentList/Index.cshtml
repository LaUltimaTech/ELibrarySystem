            margin: 30% auto;
        }
    }
</style>

<div class="student-list-container">
    <!-- Alert Messages -->
    <div id="alertBox" class="alert"></div>
    
    <!-- CSRF Token -->
    @Html.AntiForgeryToken()

    <!-- Header Section -->
    <div class="list-header">
        <h1>Student List</h1>
        <select class="school-dropdown" id="schoolDropdown" onchange="filterBySchool()">
            <option value="0">-- Select School --</option>
            @foreach (var school in Model.Schools)
            {
                if (Model.SelectedSchoolId == school.SchoolId)
                {
                    <option value="@school.SchoolId" selected>
                        @school.SchoolName (@school.SchoolCode)
                    </option>
                }
                else
                {
                    <option value="@school.SchoolId">
                        @school.SchoolName (@school.SchoolCode)
                    </option>
                }
            }
        </select>
    </div>

    <!-- Student Details Section -->
    <div class="student-details-section">
        <h3 class="student-details-title">Student Details</h3>

        <!-- Controls -->
        <div class="controls-section">
            <button class="btn-control" onclick="exportToExcel()">📊 Excel</button>
            <button class="btn-control" onclick="exportToPdf()">📄 PDF</button>
            
            <div class="column-visibility" style="position: relative;">
                <button class="btn-control" id="columnBtn">⚙️ Column visibility ▼</button>
                <div class="column-menu" id="columnMenu">
                    <label><input type="checkbox" value="StudentName" checked onchange="updateColumnVisibility()"> Student Name</label>
                    <label><input type="checkbox" value="Username" checked onchange="updateColumnVisibility()"> Username</label>
                    <label><input type="checkbox" value="AdmissionNo" checked onchange="updateColumnVisibility()"> Admission No.</label>
                    <label><input type="checkbox" value="Standard" checked onchange="updateColumnVisibility()"> Standard</label>
                    <label><input type="checkbox" value="Division" checked onchange="updateColumnVisibility()"> Division</label>
                    <label><input type="checkbox" value="Email" onchange="updateColumnVisibility()"> Email</label>
                    <label><input type="checkbox" value="FatherMobile" checked onchange="updateColumnVisibility()"> Mobile</label>
                    <label><input type="checkbox" value="Actions" checked onchange="updateColumnVisibility()"> Actions</label>
                </div>
            </div>

            <div class="search-box">
                <span class="search-label">🔍 Search:</span>
                <input type="text" id="searchInput" placeholder="Search by name, admission no, email...">
            </div>
        </div>

        <!-- Table -->
        @if (Model.Students.Any())
        {
            <div class="table-container">
                <table id="studentTable">
                    <thead>
                        <tr>
                            <th class="col-SrNo">Sr No.</th>
                            <th class="col-StudentName">Student Name</th>
                            <th class="col-Username">Username</th>
                            <th class="col-AdmissionNo">Admission No.</th>
                            <th class="col-Standard">Standard</th>
                            <th class="col-Division">Division</th>
                            <th class="col-Email">Email</th>
                            <th class="col-FatherMobile">Mobile</th>
                            <th class="col-Actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td class="col-SrNo">@student.SrNo</td>
                                <td class="col-StudentName">@student.StudentName</td>
                                <td class="col-Username">@student.Username</td>
                                <td class="col-AdmissionNo">@student.AdmissionNo</td>
                                <td class="col-Standard">@student.Standard</td>
                                <td class="col-Division">@student.Division</td>
                                <td class="col-Email">@student.Email</td>
                                <td class="col-FatherMobile">@student.FatherMobile</td>
                                <td class="col-Actions">
                                    <div class="action-buttons">
                                        <button class="action-btn btn-edit" onclick="openEditModal(@student.StudentId)" title="Edit">
                                            ✎
                                        </button>
                                        <button class="action-btn btn-delete" onclick="openDeleteModal(@student.StudentId, '@student.StudentName')" title="Delete">
                                            🗑️
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination">
                @{
                    int totalPages = (int)ViewBag.TotalPages;
                    int currentPage = (int)ViewBag.CurrentPage;
                    int schoolId = Model.SelectedSchoolId;
                }

                @if (currentPage > 1)
                {
                    <a href="@Url.Action("Index", "StudentList", new { pageNumber = 1, schoolId = schoolId })">« First</a>
                    <a href="@Url.Action("Index", "StudentList", new { pageNumber = currentPage - 1, schoolId = schoolId })">‹ Previous</a>
                }
                else
                {
                    <span class="disabled">« First</span>
                    <span class="disabled">‹ Previous</span>
                }

                @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                {
                    @if (i == currentPage)
                    {
                        <span class="active">@i</span>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "StudentList", new { pageNumber = i, schoolId = schoolId })">@i</a>
                    }
                }

                @if (currentPage < totalPages)
                {
                    <a href="@Url.Action("Index", "StudentList", new { pageNumber = currentPage + 1, schoolId = schoolId })">Next ›</a>
                    <a href="@Url.Action("Index", "StudentList", new { pageNumber = totalPages, schoolId = schoolId })">Last »</a>
                }
                else
                {
                    <span class="disabled">Next ›</span>
                    <span class="disabled">Last »</span>
                }
            </div>

            <div class="info-text">
                Showing @((currentPage - 1) * (int)ViewBag.PageSize + 1) to @Math.Min(currentPage * (int)ViewBag.PageSize, (int)ViewBag.TotalCount) 
                of <strong>@ViewBag.TotalCount</strong> entries
            </div>
        }
        else
        {
            <div class="no-records">
                <p>No students found.</p>
            </div>
        }
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Edit Student</h2>
            <button class="close-btn" onclick="closeEditModal()">&times;</button>
        </div>
        <form id="editForm">
            <div class="modal-body">
                <input type="hidden" id="studentId">
                
                <div class="form-group">
                    <label>Student Name</label>
                    <input type="text" id="studentName" required>
                </div>

                <div class="form-group">
                    <label>Admission No.</label>
                    <input type="number" id="admissionNo">
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="email">
                </div>

                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" id="dob">
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <input type="text" id="address">
                </div>

                <div class="form-group">
                    <label>City</label>
                    <input type="text" id="city">
                </div>

                <div class="form-group">
                    <label>District</label>
                    <input type="text" id="district">
                </div>

                <div class="form-group">
                    <label>State</label>
                    <input type="text" id="state">
                </div>

                <div class="form-group">
                    <label>Father Name</label>
                    <input type="text" id="fatherName">
                </div>

                <div class="form-group">
                    <label>Father Mobile</label>
                    <input type="tel" id="fatherMobile">
                </div>

                <div class="form-group">
                    <label>Father WhatsApp No.</label>
                    <input type="tel" id="fatherWhatsappNo">
                </div>

                <div class="form-group">
                    <label>Mother Name</label>
                    <input type="text" id="motherName">
                </div>

                <div class="form-group">
                    <label>Mother Mobile</label>
                    <input type="tel" id="motherMobile">
                </div>

                <div class="form-group">
