                    <input type="tel" id="motherWhatsappNo">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-cancel" onclick="closeEditModal()">Cancel</button>
                <button type="submit" class="btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal delete-modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Delete Student</h2>
            <button class="close-btn" onclick="closeDeleteModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p class="delete-warning">⚠️ Warning!</p>
            <p>Are you sure you want to delete <strong id="deleteStudentName"></strong>?</p>
            <p style="color: #666; font-size: 13px;">This action will also delete the associated user account and cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeDeleteModal()">Cancel</button>
            <button class="btn-delete-confirm" onclick="confirmDelete()">Yes, Delete</button>
        </div>
    </div>
</div>

<script>
    let editingStudentId = null;
    let deletingStudentId = null;

    // Toggle column visibility menu
    document.getElementById('columnBtn').addEventListener('click', function () {
        document.getElementById('columnMenu').classList.toggle('show');
    });

    // Close menu when clicking outside
    document.addEventListener('click', function (event) {
        const columnDiv = document.querySelector('.column-visibility');
        if (!columnDiv.contains(event.target)) {
            document.getElementById('columnMenu').classList.remove('show');
        }
    });

    function showAlert(message, type) {
        const alertBox = document.getElementById('alertBox');
        alertBox.textContent = message;
        alertBox.className = 'alert show alert-' + type;
        setTimeout(() => {
            alertBox.classList.remove('show');
        }, 4000);
    }

    function filterBySchool() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("Index", "StudentList")' + '?schoolId=' + schoolId + '&pageNumber=1';
    }

    function updateColumnVisibility() {
        const checkboxes = document.querySelectorAll('.column-menu input');
        const visibleColumns = Array.from(checkboxes)
            .filter(cb => cb.checked)
            .map(cb => cb.value)
            .join(',');

        checkboxes.forEach(cb => {
            const columnClass = 'col-' + cb.value;
            const cells = document.querySelectorAll('.' + columnClass);
            cells.forEach(cell => {
                cell.style.display = cb.checked ? '' : 'none';
            });
        });

        fetch('@Url.Action("UpdateColumnVisibility", "StudentList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: JSON.stringify({ columns: visibleColumns })
        });
    }

    function exportToExcel() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("ExportToExcel", "StudentList")' + '?schoolId=' + (schoolId || '');
    }

    function exportToPdf() {
        const schoolId = document.getElementById('schoolDropdown').value;
        window.location.href = '@Url.Action("ExportToPdf", "StudentList")' + '?schoolId=' + (schoolId || '');
    }

    function openEditModal(studentId) {
        editingStudentId = studentId;
        fetch(`@Url.Action("GetStudentDetails", "StudentList")?id=${studentId}`)
            .then(response => response.json())
            .then(data => {
                document.getElementById('studentId').value = data.studentId;
                document.getElementById('studentName').value = data.studentName || '';
                document.getElementById('admissionNo').value = data.admissionNo || '';
                document.getElementById('email').value = data.email || '';
                document.getElementById('dob').value = data.dob || '';
                document.getElementById('address').value = data.address || '';
                document.getElementById('city').value = data.city || '';
                document.getElementById('district').value = data.district || '';
                document.getElementById('state').value = data.state || '';
                document.getElementById('fatherName').value = data.fatherName || '';
                document.getElementById('fatherMobile').value = data.fatherNumber || '';
                document.getElementById('fatherWhatsappNo').value = data.fatherWhatsappNo || '';
                document.getElementById('motherName').value = data.motherName || '';
                document.getElementById('motherMobile').value = data.motherNumber || '';
                document.getElementById('motherWhatsappNo').value = data.motherWhatsappNo || '';
                document.getElementById('editModal').classList.add('show');
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('Error loading student data', 'error');
            });
    }

    function closeEditModal() {
        document.getElementById('editModal').classList.remove('show');
        editingStudentId = null;
    }

    document.getElementById('editForm').addEventListener('submit', function (e) {
        e.preventDefault();
        
        const studentId = document.getElementById('studentId').value;
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        const updateData = {
            studentId: parseInt(studentId),
            studentName: document.getElementById('studentName').value,
            studentAdmissionNo: document.getElementById('admissionNo').value ? parseInt(document.getElementById('admissionNo').value) : null,
            emailId: document.getElementById('email').value,
            dateOfBirth: document.getElementById('dob').value ? new Date(document.getElementById('dob').value).toISOString().split('T')[0] : null,
            studentAddress: document.getElementById('address').value,
            studentCity: document.getElementById('city').value,
            studentDistrict: document.getElementById('district').value,
            studentState: document.getElementById('state').value,
            studentFatherName: document.getElementById('fatherName').value,
            fatherNumber: document.getElementById('fatherMobile').value ? parseInt(document.getElementById('fatherMobile').value) : null,
            fatherWhatsappNo: document.getElementById('fatherWhatsappNo').value ? parseInt(document.getElementById('fatherWhatsappNo').value) : null,
            motherName: document.getElementById('motherName').value,
            motherNumber: document.getElementById('motherMobile').value ? parseInt(document.getElementById('motherMobile').value) : null,
            motherWhatsappNo: document.getElementById('motherWhatsappNo').value ? parseInt(document.getElementById('motherWhatsappNo').value) : null
        };

        fetch('@Url.Action("UpdateStudent", "StudentList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify(updateData)
        })
        .then(response => response.json())
        .then(data => {
            closeEditModal();
            if (data.success) {
                showAlert(data.message, 'success');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                showAlert(data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Error updating student', 'error');
        });
    });

    function openDeleteModal(studentId, studentName) {
        deletingStudentId = studentId;
        document.getElementById('deleteStudentName').textContent = studentName;
        document.getElementById('deleteModal').classList.add('show');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.remove('show');
        deletingStudentId = null;
    }

    function confirmDelete() {
        if (!deletingStudentId) return;

        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

        fetch('@Url.Action("DeleteStudent", "StudentList")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': token
            },
            body: JSON.stringify({ id: deletingStudentId })
        })
        .then(response => response.json())
        .then(data => {
            closeDeleteModal();
            if (data.success) {
                showAlert(data.message, 'success');
                setTimeout(() => {
                    location.reload();
                }, 1500);
            } else {
                showAlert(data.message, 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Error deleting student', 'error');
        });
    }

    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function () {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#studentTable tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Close modals when clicking outside
    window.addEventListener('click', function (event) {
        const editModal = document.getElementById('editModal');
        const deleteModal = document.getElementById('deleteModal');
        
        if (event.target === editModal) {
            closeEditModal();
        }
        if (event.target === deleteModal) {
            closeDeleteModal();
        }
    });
</script>